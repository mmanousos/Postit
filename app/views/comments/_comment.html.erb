<% show_post ||= false %>

<div class="row">
  <% if logged_in? %>
    <div class='span0 well text-center'>
      <%= link_to vote_post_comment_path(comment.post, vote: true), method: :post do %>
        <i class='icon-arrow-up'></i>
      <% end %>
      <br/>
      <%= pluralize(comment.post.total_votes, "vote") %>
      <br/>
      <%= link_to vote_post_comment_path(comment.post, vote: false), method: :post do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    </div>
  <% end %>
  
  <div class='well span8'>
    <em>"<%= comment.body %>"</em>
    <% if show_post %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>  

    <p>
      <span class='quiet'>by</span> <%= link_to comment.creator.username, user_path(comment.creator) %>
      <small>at <%= display_datetime(comment.created_at) %></small>
    </p>  
  </div>
</div>  